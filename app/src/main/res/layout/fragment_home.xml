<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <!-- TODO: Update blank fragment layout -->

        <HorizontalScrollView
            android:id="@+id/horizontalScrollView"
            android:layout_width="393dp"
            android:layout_height="248dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.85">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="34dp"
                        android:layout_marginEnd="5dp"
                        android:text="1"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="5dp"
                        android:text="2"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button6"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="35dp"
                        android:text="3"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button13"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="5dp"
                        android:text="A"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button14"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="5dp"
                        android:text="B"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button15"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="20dp"
                        android:text="C"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/button7"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="34dp"
                        android:layout_marginEnd="5dp"
                        android:text="4"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button8"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="5dp"
                        android:text="5"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button9"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="35dp"
                        android:text="6"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button16"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="35dp"
                        android:layout_marginEnd="5dp"
                        android:text="D"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button17"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="5dp"
                        android:text="E"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button18"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="20dp"
                        android:text="F"
                        android:textSize="20dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="16dp">

                    <Button
                        android:id="@+id/button10"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="34dp"
                        android:layout_marginEnd="5dp"
                        android:text="7"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button11"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="5dp"
                        android:text="8"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/button12"
                        android:layout_width="110dp"
                        android:layout_height="70dp"
                        android:layout_marginEnd="35dp"
                        android:text="9"
                        android:textSize="20dp" />
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>

        <Button
            android:id="@+id/buttonok"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:text="OK"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.074"
            app:layout_constraintStart_toEndOf="@+id/button39" />

    <Button
        android:id="@+id/button0"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="42dp"
        android:layout_marginBottom="4dp"
        android:text="0"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button39"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:text="DEL"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button0" />


        <Button
            android:id="@+id/buttonMIN"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:text="-"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintEnd_toStartOf="@+id/buttonC"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/buttonPLU" />

        <Button
            android:id="@+id/buttonMULTI"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginStart="6dp"
            android:text="*"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/buttonMIN"
            app:layout_constraintStart_toEndOf="@+id/dec_hex" />

        <Button
            android:id="@+id/buttonPLU"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginStart="43dp"
            android:text="+"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/buttonC"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="@android:color/darker_gray"
            android:text="C"
            android:textAlignment="center"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/horizontalScrollView"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            android:text="Switch"
            app:layout_constraintBottom_toTopOf="@+id/buttonC"
            app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/dec_hex"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="43dp"
        android:text="10/16"
        android:textSize="19sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonPLU"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="349dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/buttonMULTI"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35">

        <TextView
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text=""
            android:textSize="34sp" />

        <TextView
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text=""
            android:textSize="34sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>